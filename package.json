{
  "name": "cat-cfdi-sat",
  "version": "4.0.0",
  "description": "CFDI Catalogs in JSON and CSV",
  "main": "process.js",
  "type": "module",
  "scripts": {
    "setup": "npm install",
    "init": "export $(cat .env | xargs)",
    
    "start": "npm run process",
    "process": "npm-run-all process:json process:csv",
    "process:json": "npm-run-all process:json:*",
    "process:csv": "npm-run-all process:csv:*",
    "process:json:standard": "./src/process.js --format=json",
    "process:csv:standard": "./src/process.js --format=csv",
    "process:json:decamelize": "./src/process.js --format=json --decamelize=true --translate=false",
    "process:csv:decamelize": "./src/process.js --format=csv --decamelize=true --translate=false",
    "process:json:sat": "./src/process.js --format=json --decamelize=false --translate=false",
    "process:csv:sat": "./src/process.js --format=csv --decamelize=false --translate=false",
    
    "import": "npm-run-all import:*",
    "import:c_pais": "./src/import.js --table=c_pais",
    "import:c_meses": "./src/import.js --table=c_meses",
    "import:c_impuesto": "./src/import.js --table=c_impuesto",
    "import:c_periodicidad": "./src/import.js --table=c_periodicidad",
    "import:c_aduana": "./src/import.js --table=c_aduana",
    "import:c_forma_pago": "./src/import.js --table=c_forma_pago",
    "import:c_moneda": "./src/import.js --table=c_moneda",
    "import:c_tipo_de_comprobante": "./src/import.js --table=c_tipo_de_comprobante",
    "import:c_exportacion": "./src/import.js --table=c_exportacion",
    "import:c_metodo_pago": "./src/import.js --table=c_metodo_pago",
    "import:c_tipo_relacion": "./src/import.js --table=c_tipo_relacion",
    "import:c_regimen_fiscal": "./src/import.js --table=c_regimen_fiscal",
    "import:c_uso_cfdi": "./src/import.js --table=c_uso_cfdi",
    "import:c_clave_prod_serv": "./src/import.js --table=c_clave_prod_serv",
    "import:c_clave_unidad": "./src/import.js --table=c_clave_unidad",
    "import:c_objeto_imp": "./src/import.js --table=c_objeto_imp",
    "import:c_tipo_factor": "./src/import.js --table=c_tipo_factor",
    "import:c_tasa_o_cuota": "./src/import.js --table=c_tasa_o_cuota",
    "import:c_patente_aduanal": "./src/import.js --table=c_patente_aduanal",
    "import:c_num_pedimento_aduana": "./src/import.js --table=c_num_pedimento_aduana",
    "import:c_estado": "./src/import.js --table=c_estado",
    "import:c_localidad": "./src/import.js --table=c_localidad",
    "import:c_municipio": "./src/import.js --table=c_municipio",
    "import:c_colonia": "./src/import.js --table=c_colonia --pkey=false",
    "import:c_codigo_postal": "./src/import.js --table=c_codigo_postal --pkey=false",

    "clean": "npm-run-all clean:*",
    "clean:json": "rm 4.0/json/*",
    "clean:csv": "rm 4.0/csv/*",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yalla-ya/cat-cfdi-sat.git"
  },
  "keywords": [
    "cfdi",
    "cat",
    "sat",
    "catalog",
    "v4",
    "v3.3"
  ],
  "author": "Ido Kobelkowsky",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/yalla-ya/cat-cfdi-sat/issues"
  },
  "homepage": "https://github.com/yalla-ya/cat-cfdi-sat#readme",
  "dependencies": {
    "decamelize": "^6.0.0",
    "fast-csv": "^4.3.6",
    "mysql": "^2.18.1",
    "node-xlsx": "^0.21.0",
    "npm-run-all": "^4.1.5",
    "xlsx": "^0.17.5",
    "yargs": "^17.3.1"
  }
}
